{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "moduleResolution": "classic",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/**/*"
  ],
  "files": [
    "src/index.ts"
  ]
}
