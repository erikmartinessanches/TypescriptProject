{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": [
    "./src/**/**/*"
  ],
  "files": [
    "src/index.ts", "src/demo.ts", "src/test.ts", "src/App.tsx",  "src/CarItem.tsx"
  ]
}
